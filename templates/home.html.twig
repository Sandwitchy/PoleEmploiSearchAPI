{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1>Dernière offres Bordelaise</h1>

        <table class="table">
            <thead> 
                <tr> 
                    <th scope="col">Intitulé</th>
                    <th scope="col">Description</th>
                    <th scope="col">Lieu</th>
                    <th scope="col">Contrat</th>
                    <th scope="col">Entreprise</th>
                </tr>
            </thead>
            <tbody>
                {% for offer in offers %}
                    <tr>
                        <td>{{offer.name}}</td>
                        <td>{{offer.description}}</td>
                        <td>{{offer.city}}</td>
                        <td>{{offer.contract}}</td>
                        <td>{{offer.company}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table
    
    </div>
{% endblock %}